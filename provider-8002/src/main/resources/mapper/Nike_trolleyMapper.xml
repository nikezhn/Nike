<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cssl.mapper.Nike_trolleyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cssl.pojo.Nike_trolley">
        <id column="nt_id" property="nt_id" />
        <result column="nt_images" property="nt_images" />
        <result column="nt_name" property="nt_name" />
        <result column="nt_brand" property="nt_brand" />
        <result column="nt_color" property="nt_color" />
        <result column="nt_size" property="nt_size" />
        <result column="nt_number" property="nt_number" />
        <result column="nt_price" property="nt_price" />
    </resultMap>

    <!-- 根据用户购物车查询 -->
    <select id="trolleyUn_id" parameterType="Integer" resultMap="BaseResultMap">
        SELECT * FROM nike_trolley where nu_id=#{uid}
    </select>

</mapper>
